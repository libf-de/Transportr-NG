<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="LineBox">
		<item name="android:gravity">center_vertical</item>
		<item name="android:maxLines">1</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginRight">4dp</item>
	</style>

	<style name="DialogAnimation" parent="@android:style/Animation.Dialog">
		<item name="android:windowEnterAnimation">@anim/scale_up</item>
		<item name="android:windowExitAnimation">@anim/scale_down</item>
	</style>

	<style name="FavoriteCard" parent="Widget.Material3.CardView.Filled">
		<item name="android:foreground">?selectableItemBackground</item>
		<item name="android:clickable">true</item>
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginEnd">8dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="cardElevation">3dp</item>
	</style>

	<style name="FavoriteCardForeground" parent="Widget.Material3.CardView.Elevated">
		<item name="android:textColor">@color/md_theme_onSecondaryContainer</item>
		<item name="tint">@color/md_theme_onSecondaryContainer</item>
	</style>

	<style name="Card" parent="Widget.Material3.CardView.Elevated">
		<item name="cardCornerRadius">8dp</item>
		<item name="cardUseCompatPadding">true</item>
		<item name="cardElevation">2dp</item>
		<item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
	</style>

	<style name="ContributorsCard" parent="Card">
		<item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
	</style>

	<style name="ErrorCard" parent="Card">
		<item name="cardBackgroundColor">?attr/colorErrorContainer</item>
		<item name="android:textColor">?attr/colorError</item>
		<item name="android:textColor">?attr/colorError</item>
		<item name="tint">?attr/colorError</item>
	</style>

	<style name="NavHeaderCard" parent="Card">
		<item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
		<item name="android:textColor">?attr/colorOnSurface</item>
	</style>

	<style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:textColor">?attr/colorPrimary</item>
	</style>

	<style name="Divider">
		<item name="android:background">?colorOutline</item>
		<item name="android:layout_height">1px</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="ActivityAnimation" parent="@android:style/Animation.Activity">
		<item name="android:activityOpenEnterAnimation">@anim/screen_new_in</item>
		<item name="android:activityOpenExitAnimation">@anim/screen_old_out</item>
		<item name="android:activityCloseEnterAnimation">@anim/screen_old_in</item>
		<item name="android:activityCloseExitAnimation">@anim/screen_new_out</item>
	</style>

	<style name="MapStyle">
		<item name="maplibre_uiAttribution">false</item>
		<item name="maplibre_uiCompass">true</item>
		<item name="maplibre_uiLogo">false</item>
		<item name="maplibre_uiTiltGestures">false</item>
	</style>

	<style name="RoundedImageView">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">8dp</item>
	</style>

	<style name="AppTheme.MapFullscreen" parent="AppTheme">
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
	</style>

</resources>
